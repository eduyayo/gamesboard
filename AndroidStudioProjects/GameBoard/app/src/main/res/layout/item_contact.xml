<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:gravity="bottom"
    android:layout_margin="10dp"
    android:background="@drawable/card_bg_r4"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="96dp"
            fontawesometext:fa_icon="fa-user" />

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_vertical" android:layout_margin="5dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Username" android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="estate"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" android:gravity="bottom|right">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <com.beardedhen.androidbootstrap.FontAwesomeText
                    android:id="@+id/game_count_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    fontawesometext:fa_icon="fa-gamepad" />

                <TextView
                    android:id="@+id/game_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_count_grey"
                    android:text="0" />
            </LinearLayout>
<!--
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <com.beardedhen.androidbootstrap.FontAwesomeText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    fontawesometext:fa_icon="fa-envelope-o" />

                <TextView
                    android:id="@+id/invitation_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_count_green"
                    android:text="@string/ellipsis" />
            </LinearLayout>
-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>