<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#33b5e5" />
      <stroke
          android:width="1dp"
          android:color="#992f2f" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="5dp"
          android:right="10dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#ffffff"
          android:endColor="#dddddd"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#eeeeee" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="5dp"
          android:right="10dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>